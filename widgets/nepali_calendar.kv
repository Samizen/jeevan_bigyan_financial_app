# In widgets/nepali_calendar.kv

<NepaliCalendarPopup>:
    title: "महिना छान्नुहोस्"
    size_hint: 0.9, 0.7
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        padding: 15
        spacing: 15

        # Year navigation header
        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                text: "←"
                size_hint_x: None
                width: 50
                on_release: root.on_year_decrement()

            Label:
                id: year_label
                text: str(root.nep_year)
                font_size: 24
                bold: True
                halign: 'center'
                valign: 'middle'

            Button:
                text: "→"
                size_hint_x: None
                width: 50
                on_release: root.on_year_increment()
        
        # Month grid
        GridLayout:
            id: month_grid
            cols: 3
            spacing: 10
            size_hint_y: 1

            # Months will be added dynamically from Python code