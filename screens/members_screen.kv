# screens/members_screen.kv
<MembersScreen>:
    name: 'members_screen'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        Label:
            text: "सदस्य सूची"
            size_hint_y: None
            height: 40

        # Add Member Button
        Button:
            text: "सदस्य थप्नुहोस्"
            size_hint_y: None
            height: 50
            on_release: root.open_add_member_form()

        # Search Bar
        TextInput:
            id: search_input
            hint_text: "सदस्य खोज्नुहोस्"
            size_hint_y: None
            height: 40
            on_text: root.load_members(self.text)
        
        # Scrollable list for members
        ScrollView:
            id: member_list_scroll
            do_scroll_x: False
            BoxLayout:
                id: member_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 5
                padding: 10